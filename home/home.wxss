.page {
	background: linear-gradient(to bottom, #4E89D6, #FFFFFF);
}

.page-box {
	height: 100vh;
}

.page-box.scroll {
	height: calc(100vh - 172rpx);
	overflow-y: auto;
}

.group_9 {
	padding: 30rpx 0;
	height: 172rpx;
	color: #0d79ff;
}

.group_9 view {
	font-size: 40rpx;
	position: relative;
	height: 112rpx;
	width: 346rpx;
}

.group_9 view>view {
	position: absolute;
	top: 0;
	left: 0;
}

.group_9 view>image {
	height: 112rpx;
	width: 346rpx;
}

.group_9 view>view>image {
	width: 44rpx;
	height: 44rpx;
	margin-right: 20rpx;
}

.group_9 view.active {
	color: #fff;
}

.group_9 view.disabled {
	opacity: .5;
}

.dialog {
	position: fixed;
	width: 80%;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 1;
	padding: 24rpx 34rpx;
	background-color: #cecece;
	border-radius: 39rpx;
	box-shadow: 0rpx 0rpx 18rpx #000000;
	border: solid 2rpx #ffffff80;
}

.dialog-hd {
	line-height: 60rpx;
	font-size: 26rpx;
}

.qrcode {
	position: absolute;
	top: 0;
	left: 100%;
	z-index: -2;
}

.dialog-hd text {
	font-size: 48rpx;
	color: #0D7AFF;
	letter-spacing: 10rpx;
	font-weight: bold;
	margin: auto;
}

.dialog-hd image {
	width: 30rpx;
	height: 30rpx;
}

.dialog-bd {
	max-height: 60vh;
	overflow-y: auto;
}

.dialog-bd .dialog-content {
	margin: 40rpx 0;
	height: auto;
	word-wrap: break-word;
	width: 100%;
	font-size: 30rpx;
	white-space: pre-line;
	padding: 0 20rpx;
}

.dialog-input>text {
	display: block;
	margin-top: 40rpx;
	font-size: 24rpx;
}

.dialog-input input,
.dialog-input>view>view {
	width: 100%;
	height: 84rpx;
	border-radius: 10px;
	background: #FFF;
	padding: 10rpx 20rpx;
	text-align: center;
	font-size: 50rpx;
	box-sizing: border-box;
}

.dialog-input>view {
	position: relative;
	width: 80%;
	height: 84rpx;
	margin: 50rpx auto;
}

.dialog-input input.pincode {
	opacity: 0;
}

.dialog-input>view>view {
	position: absolute;
	top: 0;
	left: 0;
	font-weight: bold;
	gap: 0 3%;
}

.dialog-input>view>view text {
	width: 13.66%;
	border-bottom: 4rpx solid;
	height: 34px;
	display: block;
}

.dialog-btn view {
	background-color: #0d79ff;
	border-radius: 24rpx;
	box-shadow: 0rpx 10rpx 10rpx #00000040;
	width: 203rpx;
	height: 80rpx;
	color: #fff;
}

.dialog-find {
	margin: 40rpx 0;
}

.dialog-find .device-item {
	margin-bottom: 10rpx;
	border-radius: 10rpx;
	background: #fff;
	padding: 10rpx 20rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.dialog-find .device-item text {
	font-size: 20rpx;
}